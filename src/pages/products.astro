---

<Layout title="Products">
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-5">
      <div class="text-center mb-12">
        <h1 class="text-5xl font-bold mb-4">Our Products</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Discover our carefully curated selection of innovative technology products designed to enhance your lifestyle.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {products.map((product) => (
          <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 opacity-0 animate-[fadeInUp_0.8s_ease-out_forwards]">
            <div class="bg-gradient-to-br from-gray-50 to-gray-100 p-12 flex items-center justify-center relative overflow-hidden group">
              <div class="text-8xl transform group-hover:scale-110 transition-transform duration-500">{product.emoji}</div>
              <div class="absolute inset-0 bg-gradient-to-t from-teal-700 to-transparent opacity-0 group-hover:opacity-20 transition-opacity duration-500"></div>
            </div>
            
            <div class="p-6">
              <h3 class="text-2xl font-bold mb-2">{product.name}</h3>
              <p class="text-[var(--color-text-light)] mb-4">{product.description}</p>
              
              <div class="text-3xl font-bold text-teal-700 mb-4">{product.price}</div>
              
              <ul class="space-y-2 mb-6">
                {product.features.map((feature) => (
                  <li class="flex items-start">
                    <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-sm text-gray-600">{feature}</span>
                  </li>
                ))}
              </ul>
              
              <button class="w-full inline-block px-9 py-4 rounded-md font-semibold uppercase tracking-wider text-sm transition-all duration-300 ease-in-out relative overflow-hidden bg-gradient-to-r from-teal-600 to-teal-800 text-white shadow-[0_4px_15px_rgba(20,184,166,0.2)] hover:-translate-y-[3px] hover:shadow-[0_8px_25px_rgba(20,184,166,0.3)] before:content-[''] before:absolute before:top-1/2 before:left-1/2 before:w-0 before:h-0 before:rounded-full before:bg-white/20 before:-translate-x-1/2 before:-translate-y-1/2 before:transition-all before:duration-[600ms] hover:before:w-[300px] hover:before:h-[300px] group">
                <span class="flex items-center justify-center gap-2">
                  Learn More
                  <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </span>
              </button>
            </div>
          </div>
        ))}
      </div>
      
      <div class="mt-16 text-center">
        <p class="text-lg text-gray-600 mb-6">
          Can't find what you're looking for? We're always adding new products!
        </p>
        <a href="/#contact" class="inline-block px-9 py-3.5 rounded-md font-semibold uppercase tracking-wider text-sm transition-all duration-300 ease-in-out relative overflow-hidden border-2 border-gray-900 text-gray-900 bg-transparent hover:text-white hover:border-gray-900 after:content-[''] after:absolute after:top-0 after:left-0 after:w-0 after:h-full after:bg-gray-900 after:transition-all after:duration-300 after:ease-in-out after:z-[-1] hover:after:w-full">Contact Us</a>
      </div>
    </div>
  </section>
</Layout>