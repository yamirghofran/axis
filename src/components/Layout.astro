---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Axis Seek - Innovative products for technology enthusiasts" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} - Axis Seek</title>
  </head>
  <body>
    <div class="min-h-screen flex flex-col">
      <!-- Top banner -->
      <div class="bg-teal-700 text-white py-3 text-center text-sm">
        <div class="max-w-7xl mx-auto px-5 flex justify-between items-center">
          <p>Website designed with the BI2 website builder. Create your own website today.</p>
          <div class="flex items-center gap-4">
            <a href="#" class="bg-teal-200 text-gray-900 px-4 py-1 rounded font-medium hover:bg-white transition-colors">
              START FOR FREE
            </a>
            <button class="text-white hover:opacity-70 transition-opacity">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Header -->
      <header class="bg-teal-100 py-5 backdrop-blur-sm shadow-sm">
        <div class="max-w-7xl mx-auto px-5">
          <nav class="flex justify-between items-center">
            <a href="/" class="text-2xl font-bold text-gray-900 tracking-wider hover:text-teal-700 transition-colors duration-300">AXIS SEEK</a>
            
            <ul class="flex items-center gap-10">
              <li><a href="/" class="relative text-gray-900 font-medium hover:text-teal-700 transition-all duration-300 after:content-[''] after:absolute after:bottom-[-4px] after:left-0 after:w-0 after:h-[2px] after:bg-teal-700 after:transition-all after:duration-300 hover:after:w-full">Home</a></li>
              <li><a href="/about" class="relative text-gray-900 font-medium hover:text-teal-700 transition-all duration-300 after:content-[''] after:absolute after:bottom-[-4px] after:left-0 after:w-0 after:h-[2px] after:bg-teal-700 after:transition-all after:duration-300 hover:after:w-full">About</a></li>
              <li><a href="/products" class="relative text-gray-900 font-medium hover:text-teal-700 transition-all duration-300 after:content-[''] after:absolute after:bottom-[-4px] after:left-0 after:w-0 after:h-[2px] after:bg-teal-700 after:transition-all after:duration-300 hover:after:w-full">Products</a></li>
              <li><a href="/#contact" class="inline-block px-9 py-3.5 rounded-md font-semibold uppercase tracking-wider text-sm transition-all duration-300 ease-in-out relative overflow-hidden border-2 border-gray-900 text-gray-900 bg-transparent hover:text-white hover:border-gray-900 after:content-[''] after:absolute after:top-0 after:left-0 after:w-0 after:h-full after:bg-gray-900 after:transition-all after:duration-300 after:ease-in-out after:z-[-1] hover:after:w-full">CONTACT</a></li>
            </ul>
          </nav>
        </div>
      </header>

      <!-- Main content -->
      <main class="flex-grow">
        <slot />
      </main>

      <!-- Footer -->
      <footer class="bg-teal-700 text-white py-6">
        <div class="max-w-7xl mx-auto px-5 text-center">
          <p>&copy; 2024 Axis Seek. All rights reserved.</p>
        </div>
      </footer>
    </div>
  </body>
</html>

<style>
  @import "../styles/global.css";
</style>